<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/night_reduced"
    tools:context="com.projetastonlille.fr.shuutthebaby.Menu"
    android:onClick="startRecording">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/sheeprec"
        android:layout_marginBottom="170dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="true"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:background="@drawable/layout_corner"
        android:id="@+id/imageButton"
        android:onClick="startRecording"
        />


    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Stop recording"
        android:id="@+id/stopRecording"
        android:onClick="stopRecording"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/layout_corner"
        android:textColor="@color/colorTextYellow"
        android:layout_marginBottom="102dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:id="@+id/playRecording"
        android:onClick="startPlaying"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/layout_corner"
        android:textColor="@color/colorTextYellow"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Listen record" />

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Stop listening"
        android:id="@+id/stopPlaying"
        android:onClick="stopPlaying"
        android:layout_alignTop="@+id/playRecording"
        android:layout_alignParentEnd="true"
        android:background="@drawable/layout_corner"
        android:textColor="@color/colorTextYellow"
        />


</RelativeLayout>


